body {
  margin: 0;
  padding: 0;
}

header {
  background-color: #d3f2f7;
  text-align: center;
  margin: auto;
  overflow: hidden;
}

h1,
h2 {
  font-weight: 900;
  color: #ffd700;
  background-color: #00aacc;
  padding: 0 100px;
  text-align: center;
  margin: auto;
}

h1 {
  font-family: 'Calibri', sans-serif;
  text-align: left;
  font-size: 4em;
}

h2 {
  font-family: 'Calibri', sans-serif;
  font-size: 2em;
}

.box {
  margin: 50px 172px 50px 172px;
  display: flex;
  flex-wrap: wrap;
}

.col {
  flex: 1;
}

img {
  border: 1px solid #ccc;
  padding: 2px;
  margin: 2px;
  background-color: #808080;
  border-radius: 10%;
}

