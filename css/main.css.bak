@font-face {
    font-family: candyBeans;
    src: url(../assets/fonts/candy_beans/candy_beans.otf);
}

body { /* Text body */
    display: block;
    background-image: url("../assets/images/space.png");
    color: white;
    font-family: candyBeans, serif;
}

.power { /* Superscript values */
    vertical-align: super;
}

#title {
    text-align: center;
}

/* PLANET IMAGES STYLING */
.planetImgRow {
    padding-bottom: 20px;
    text-align: center;
}

.planetImgColumn {
    display: inline-block; /* Display images side-by-side */
}

img { /* Planet images */
    width: 150px;
    height: auto;
    margin-left: auto;
    margin-right: auto;
}

/* TABLE STYLING */
#noVal {
    border-style: none;
}

.planetTable {
    border-spacing: 10px;
    margin-left: auto;
    margin-right: auto;
}

.planetVals {
    padding: 10px;
    text-align: center;
}

.planets { /* Planet names in table */
    border-style: solid;
    border-width: 2px;
    padding: 5px;
    text-align: center;
}

.planetCatg { /* Planet category description */
    border-style: solid;
    border-width: 2px;
    padding: 10px;
    text-align: right;
}

.planetTable:hover .jupiter {
    background-color: crimson;
}

.planetTable:hover .jupiterVal {
    background-color: crimson;
}

.planetTable:hover .saturn {
    background-color: darkorange;
}

.planetTable:hover .saturnVal {
    background-color: darkorange;
}

.planetTable:hover .uranus {
    background-color: cornflowerblue;
}

.planetTable:hover .uranusVal {
    background-color: cornflowerblue;
}

.planetTable:hover .neptune {
    background-color: mediumpurple;
}

.planetTable:hover .neptuneVal {
    background-color: mediumpurple;
}

#mass:hover .mass {
    background-color: green;
}

#diameter:hover .diameter {
    background-color: green;
}

#density:hover .density {
    background-color: green;
}

#escVelocity:hover .escVelocity {
    background-color: green;
}

#avgDisFromSun:hover .distance {
    background-color: green;
}

#rotPeriod:hover .rotPeriod {
    background-color: green;
}

#revPeriod:hover .revPeriod {
    background-color: green;
}

/* HYPERLINK STYLING */
a {
    color: white;
}

